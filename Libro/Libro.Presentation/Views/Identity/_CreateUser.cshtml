@model Libro.Business.Libra.DTOs.IdentityDTOs.AddUserDTO

<div id="staticModal" data-modal-backdrop="static" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full mt-[3rem]">
    <div class="relative w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <div class="space-y-4 md:space-y-6 sm:p-8" style="max-height: calc(100vh - 2rem); overflow-y: auto;">
                <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                        Create user
                    </h3>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="staticModal">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                        </svg>
                    </button>
                </div>
                @using (Html.BeginForm("Create", "Identity", new {@class = "space-y-4 md:space-y-6", @id = "registerForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="grid gap-6 mb-6 md:grid-cols-2">
                        <div>
                            @Html.LabelFor(m => m.Firstname, "First name", new { @id = "addFirstnameL", @class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white" })
                            @Html.TextBoxFor(m => m.Firstname, new { @id = "addFirstname", @class = "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", @placeholder = "John" })
                            @Html.ValidationMessageFor(m => m.Firstname, null, new { @id = "addFirstnameV", @class = "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" })
                        </div>
                        <div>
                            @Html.LabelFor(m => m.Lastname, "Last name", new { @id = "addLastnameL", @class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white" })
                            @Html.TextBoxFor(m => m.Lastname, new { @id = "addLastname", @class = "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", @placeholder = "Doe" })
                            @Html.ValidationMessageFor(m => m.Lastname, null, new { @id = "addLastnameV", @class = "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" })
                        </div>
                    </div>
                    <div class="mb-6">
                        @Html.LabelFor(m => m.Username, new { @id = "addUsernameL", @class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white" })
                        @Html.TextBoxFor(m => m.Username, new { @id = "addUsername", @class = "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", @placeholder = "JohnDoe001" })
                        @Html.ValidationMessageFor(m => m.Username, null, new { @id = "addUsernameV", @class = "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" })
                    </div>
                    <div class="mb-6">
                        @Html.LabelFor(m => m.Email, new { @id = "addEmailL", @class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white" })
                        @Html.TextBoxFor(m => m.Email, new { @id = "addEmail", @class = "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", @placeholder = "john.doe@gmail.com" })
                        @Html.ValidationMessageFor(m => m.Email, null, new { @id = "addEmailV", @class = "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" })
                    </div>
                    <div class="grid gap-6 mb-6 md:grid-cols-2">
                        <div>
                            @Html.LabelFor(m => m.Password, new { @id = "addPasswordL", @class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white" })
                            @Html.PasswordFor(m => m.Password, new { @id = "addPassword", @class = "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", @placeholder = "•••••••••" })
                            @Html.ValidationMessageFor(m => m.Password, null, new { @id = "addPasswordV", @class = "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" })
                        </div>
                        <div>
                            @Html.LabelFor(m => m.ConfirmPassword, new { @id = "addConfirmPasswordL", @class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "addConfirmPassword", @class = "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", @placeholder = "•••••••••" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @id = "addConfirmPasswordV", @class = "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" })
                        </div>
                    </div>
                    <div class="mb-6">
                        @Html.LabelFor(m => m.Telephone, "Number phone", new { @id = "addTelephoneL", @class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white" })
                        @Html.TextBoxFor(m => m.Telephone, new { @id = "addTelephone", @class = "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", @placeholder = "78-099-291" })
                        @Html.ValidationMessageFor(m => m.Telephone, null, new { @id = "addTelephoneV", @class = "flex items-center font-medium tracking-wide text-red-500 text-xs mt-1 ml-1" })
                    </div>
                    <div class="mb-6">
                        @Html.LabelFor(m => m.Role, "Role", new { @id="addRoleL", @class = "block mb-2 text-sm font-medium text-gray-900 dark:text-white" })
                        <select id="addRole" name="IdUserType" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"></select>
                    </div>
                    <div class="flex items-center p-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
                        <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Create</button>
                        <button data-modal-hide="staticModal" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">Cancel</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
