@{
    Layout = null;

    var toastData = ViewData["ToastData"] as Dictionary<string, string>;
    string svg = "", message = "";

    if (!User.Identity.IsAuthenticated)
    {
        svg = Context.Session.GetString("svg") ?? "";
        message = Context.Session.GetString("message") ?? "";
    }
    else
    {
        if (toastData != null)
        {
            svg = toastData["svg"];
            message = toastData["message"];
        }
    }
}

@if (toastData != null)
{
    <div id="toast-container" class="fixed bottom-0 inset-x-0 flex items-center justify-center z-50 mb-3">
        <div id="toast-default" class="flex items-center w-full max-w-sm p-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
            <div class="flex items-center justify-center space-x-4">
                <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-blue-500 bg-blue-100 rounded-lg dark:bg-blue-800 dark:text-blue-200">
                    @Html.Raw(svg)
                </div>
                <div class="text-sm font-normal">@Html.Raw(message)</div>
            </div>
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-default" aria-label="Close">
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg>
            </button>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
}